# ComfyUI 配置
COMFYUI_URL=http://127.0.0.1:8188

# 抖音 API 配置（可选）
DOUYIN_API_KEY=your_douyin_api_key
DOUYIN_API_SECRET=your_douyin_api_secret
DOUYIN_API_ENDPOINT=https://api.douyin.com/v1/hotspots

# 大模型 API 配置（可选）
# OpenAI
LLM_API_KEY=your_openai_api_key
LLM_API_ENDPOINT=https://api.openai.com/v1/chat/completions
LLM_MODEL=gpt-4

# 或者使用其他大模型
# LLM_API_ENDPOINT=https://api.anthropic.com/v1/messages  # Claude
# LLM_API_ENDPOINT=https://dashscope.aliyuncs.com/api/v1/services/aigc/text-generation/generation  # 通义千问

# 图像搜索 API 配置（可选）
IMAGE_SEARCH_API_KEY=your_unsplash_api_key
IMAGE_SEARCH_API_ENDPOINT=https://api.unsplash.com/search/photos

# 本地参考图库路径
LOCAL_LIBRARY_PATH=data/reference_images

# 图像分析 API 配置（可选）
VISION_API_KEY=your_vision_api_key
VISION_API_ENDPOINT=https://vision.googleapis.com/v1/images:annotate

# 人脸识别 API 配置（可选）
FACE_API_KEY=your_face_api_key
FACE_API_ENDPOINT=https://api-us.faceplusplus.com/facepp/v3/detect

# 图像质量评估 API 配置（可选）
QUALITY_API_KEY=your_quality_api_key
QUALITY_API_ENDPOINT=https://api.example.com/quality/assess

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 输出目录
OUTPUT_DIR=output/videos

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/agent_system.log

# Agent 配置
CONSISTENCY_THRESHOLD=0.8
MAX_RETRIES=3
TIMEOUT=300
